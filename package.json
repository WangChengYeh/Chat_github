{
  "name": "chat-github",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile-First PWA for AI-Assisted GitHub File Editing with WebSocket File Transfer",
  "keywords": [
    "pwa",
    "github",
    "ai",
    "mobile",
    "websocket",
    "file-transfer",
    "chinese"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WangChengYeh/Chat_github.git"
  },
  "homepage": "https://wangchengyeh.github.io/Chat_github/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "npm run build && git add dist && git commit -m 'deploy: update GitHub Pages build' && git push origin main",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "typecheck": "tsc --noEmit",
    "test": "node test.js",
    "test:playwright": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "ios:build": "./scripts/build-ios.sh",
    "ios:dev": "npm run build && npx cap copy ios && npx cap open ios",
    "ios:sync": "npx cap sync ios"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.2.3",
    "@codemirror/state": "^6.3.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.21.3",
    "@uiw/react-codemirror": "^4.21.20",
    "diff": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.14.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/diff": "^5.0.8",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.17.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
