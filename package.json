{
  "name": "chat-github",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile-First PWA for AI-Assisted GitHub File Editing with WebSocket File Transfer",
  "keywords": [
    "pwa",
    "github",
    "ai",
    "mobile",
    "websocket",
    "file-transfer",
    "chinese"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WangChengYeh/Chat_github.git"
  },
  "homepage": "https://wangchengyeh.github.io/Chat_github/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "icons": "node scripts/gen-icons.cjs",
    "upload-snippets": "node scripts/upload-snippets.js",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "typecheck": "tsc --noEmit",
    "test": "node test.js",
    "test:playwright": "playwright test",
    "test:ai": "playwright test ai-workflows.spec.js",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "ios:build": "./scripts/build-ios.sh",
    "ios:dev": "npm run build && npx cap copy ios && npx cap open ios",
    "ios:sync": "npx cap sync ios",
    "fetch:pyodide": "node scripts/fetch-assets.cjs pyodide",
    "fetch:pyodide:archive": "PYODIDE_FETCH=archive node scripts/fetch-assets.cjs pyodide-archive",
    "fetch:wasmer": "node scripts/fetch-assets.cjs wasmer",
    "fetch:assets": "node scripts/fetch-assets.cjs all",
    "fetch:assets:archive": "PYODIDE_FETCH=archive node scripts/fetch-assets.cjs all"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.1",
    "@codemirror/state": "^6.4.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.36.0",
    "@uiw/react-codemirror": "^4.23.6",
    "diff": "^5.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/diff": "^5.2.3",
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.17",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3",
    "vite": "^5.4.18",
    "vite-plugin-pwa": "^0.21.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
